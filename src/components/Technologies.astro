---
// Componente de Tecnologías
const frontendTechs = [
  { name: "JavaScript", icon: "fab fa-js", color: "#F7DF1E", level: 90 },
  { name: "React", icon: "fab fa-react", color: "#61DAFB", level: 85 },
  { name: "Astro", icon: "fas fa-rocket", color: "#FF5D01", level: 80 },
  { name: "CSS", icon: "fab fa-css3-alt", color: "#1572B6", level: 90 },
];

const backendTechs = [
  { name: "Java", icon: "fab fa-java", color: "#007396", level: 85 },
  { name: "Python", icon: "fab fa-python", color: "#3776AB", level: 80 },
  { name: "C#", icon: "fab fa-microsoft", color: "#512BD4", level: 95 },
  { name: "ASP.NET", icon: "fab fa-microsoft", color: "#512BD4", level: 90 },
  { name: "Node.js", icon: "fab fa-node-js", color: "#339933", level: 85 },
  { name: "Laravel", icon: "fab fa-laravel", color: "#FF2D20", level: 75 },
  { name: "PHP", icon: "fab fa-php", color: "#777BB4", level: 70 },
  { name: "Kotlin", icon: "fas fa-k", color: "#7F52FF", level: 75 },
];

const toolsTechs = [
  { name: "Azure", icon: "fab fa-microsoft", color: "#0078D4", level: 85 },
  { name: "Git", icon: "fab fa-git-alt", color: "#F05032", level: 90 },
  { name: "Docker", icon: "fab fa-docker", color: "#2496ED", level: 80 },
  { name: "PostgreSQL", icon: "fas fa-database", color: "#336791", level: 85 },
  { name: "MySQL", icon: "fas fa-database", color: "#4479A1", level: 90 },
];
---

<section id="technologies" class="py-20 relative overflow-hidden">
  <!-- Background Grid y Efectos -->
  <div class="absolute inset-0 -z-10 bg-gradient-to-b from-secondary via-secondary/95 to-black/80"></div>
  
  <!-- Partículas de fondo -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/4 right-1/4 w-64 h-64 bg-primary/5 rounded-full filter blur-3xl"></div>
    <div class="absolute bottom-1/4 left-1/4 w-80 h-80 bg-indigo-500/5 rounded-full filter blur-3xl"></div>
  </div>
  
  <!-- Línea decorativa superior -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-blue-500/20 to-transparent"></div>
  
  <div class="container mx-auto px-4 md:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        <span class="text-white">Tecnologías y</span>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-blue-700"> Herramientas</span>
      </h2>
      <div class="w-24 h-1.5 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full mx-auto mb-8"></div>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Experiencia en múltiples tecnologías para crear soluciones completas y eficientes.
      </p>
    </div>
    
    <!-- Pestañas de categorías -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button id="tab-frontend" class="tab-btn active px-6 py-2.5 rounded-full bg-blue-500/10 border border-blue-500/30 text-blue-400 font-medium transition-all hover:bg-blue-500/20">Frontend</button>
      <button id="tab-backend" class="tab-btn px-6 py-2.5 rounded-full bg-indigo-500/10 border border-indigo-500/30 text-indigo-400 font-medium transition-all hover:bg-indigo-500/20">Backend</button>
      <button id="tab-tools" class="tab-btn px-6 py-2.5 rounded-full bg-purple-500/10 border border-purple-500/30 text-purple-400 font-medium transition-all hover:bg-purple-500/20">Herramientas</button>
    </div>
    
    <!-- Contenido de las tecnologías -->
    <div class="tab-content" id="content-frontend">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {frontendTechs.map((tech) => (
          <div class="bg-secondary/60 backdrop-blur-md rounded-xl p-6 border border-blue-500/10 transform transition-all duration-300 hover:scale-105 hover:border-blue-500/30 group">
            <div class="bg-blue-900/30 w-16 h-16 rounded-lg flex items-center justify-center mb-4 text-3xl mx-auto group-hover:bg-blue-900/50 transition-all">
              <i class={tech.icon} style={`color: ${tech.color}`}></i>
            </div>
            <h3 class="text-xl font-bold text-center mb-3 text-white">{tech.name}</h3>
            <div class="w-full bg-gray-700/50 rounded-full h-2 mb-1">
              <div class="bg-gradient-to-r from-blue-500 to-blue-700 h-2 rounded-full" style={`width: ${tech.level}%`}></div>
            </div>
            <div class="flex justify-between text-xs text-gray-400">
              <span>Dominio</span>
              <span>{tech.level}%</span>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="tab-content hidden" id="content-backend">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {backendTechs.map((tech) => (
          <div class="bg-secondary/60 backdrop-blur-md rounded-xl p-6 border border-indigo-500/10 transform transition-all duration-300 hover:scale-105 hover:border-indigo-500/30 group">
            <div class="bg-indigo-900/30 w-16 h-16 rounded-lg flex items-center justify-center mb-4 text-3xl mx-auto group-hover:bg-indigo-900/50 transition-all">
              <i class={tech.icon} style={`color: ${tech.color}`}></i>
            </div>
            <h3 class="text-xl font-bold text-center mb-3 text-white">{tech.name}</h3>
            <div class="w-full bg-gray-700/50 rounded-full h-2 mb-1">
              <div class="bg-gradient-to-r from-indigo-500 to-indigo-700 h-2 rounded-full" style={`width: ${tech.level}%`}></div>
            </div>
            <div class="flex justify-between text-xs text-gray-400">
              <span>Dominio</span>
              <span>{tech.level}%</span>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="tab-content hidden" id="content-tools">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {toolsTechs.map((tech) => (
          <div class="bg-secondary/60 backdrop-blur-md rounded-xl p-6 border border-purple-500/10 transform transition-all duration-300 hover:scale-105 hover:border-purple-500/30 group">
            <div class="bg-purple-900/30 w-16 h-16 rounded-lg flex items-center justify-center mb-4 text-3xl mx-auto group-hover:bg-purple-900/50 transition-all">
              <i class={tech.icon} style={`color: ${tech.color}`}></i>
            </div>
            <h3 class="text-xl font-bold text-center mb-3 text-white">{tech.name}</h3>
            <div class="w-full bg-gray-700/50 rounded-full h-2 mb-1">
              <div class="bg-gradient-to-r from-purple-500 to-purple-700 h-2 rounded-full" style={`width: ${tech.level}%`}></div>
            </div>
            <div class="flex justify-between text-xs text-gray-400">
              <span>Dominio</span>
              <span>{tech.level}%</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Desactivar todos los botones
        tabButtons.forEach(btn => btn.classList.remove('active'));
        
        // Ocultar todos los contenidos
        tabContents.forEach(content => content.classList.add('hidden'));
        
        // Activar el botón actual
        button.classList.add('active');
        
        // Mostrar el contenido correspondiente
        const contentId = 'content-' + button.id.split('-')[1];
        const contentElement = document.getElementById(contentId);
        if (contentElement) {
          contentElement.classList.remove('hidden');
        }
      });
    });
  });
</script>

<style>
  /* Estilo para pestañas activas */
  .tab-btn.active {
    background: rgb(59, 130, 246, 0.2);
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.3);
  }
  
  #tab-backend.active {
    background: rgba(99, 102, 241, 0.2);
    box-shadow: 0 0 15px rgba(99, 102, 241, 0.3);
  }
  
  #tab-tools.active {
    background: rgba(168, 85, 247, 0.2);
    box-shadow: 0 0 15px rgba(168, 85, 247, 0.3);
  }
</style> 