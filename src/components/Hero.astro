---
import { Image } from 'astro:assets';
---

<section id="home" class="relative min-h-screen flex items-center justify-center pt-24 pb-16 overflow-hidden">
  <!-- Partículas y elementos decorativos de fondo -->
  <div class="absolute inset-0 -z-10">
    <!-- Gradientes de fondo -->
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-secondary via-black to-secondary/80"></div>
    <div class="absolute -top-40 -right-40 w-96 h-96 rounded-full bg-blue-800/10 filter blur-3xl"></div>
    <div class="absolute -bottom-20 -left-20 w-80 h-80 rounded-full bg-indigo-800/10 filter blur-3xl"></div>
    
    <!-- Partículas/formas decorativas -->
    <div class="hidden md:block absolute top-20 left-20 w-4 h-16 bg-blue-500/20 rounded-full rotate-45"></div>
    <div class="hidden md:block absolute top-60 right-32 w-6 h-6 bg-primary/30 rounded-full"></div>
    <div class="hidden md:block absolute bottom-32 left-1/4 w-3 h-3 bg-blue-500/40 rounded-full animate-pulse-slow"></div>
    <div class="hidden md:block absolute top-1/3 right-1/4 w-8 h-2 bg-indigo-500/30 rounded-full rotate-12"></div>
    <div class="hidden md:block absolute bottom-1/3 right-1/3 w-5 h-5 border border-blue-500/40 rounded-full"></div>
    
    <!-- Grid de fondo con líneas -->
    <div class="absolute inset-0 flex justify-between">
      {Array(6).fill(0).map((_, i) => (
        <div class="h-full w-px bg-blue-500/[0.03]"></div>
      ))}
    </div>
    <div class="absolute inset-0 flex flex-col justify-between">
      {Array(8).fill(0).map((_, i) => (
        <div class="w-full h-px bg-blue-500/[0.03]"></div>
      ))}
    </div>
  </div>
  
  <!-- Líneas decorativas -->
  <div class="absolute top-28 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-blue-500/20 to-transparent"></div>
  <div class="absolute bottom-28 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-blue-500/20 to-transparent"></div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 md:px-8 z-10">
    <div class="flex flex-col items-center justify-center text-center">
      <div class="space-y-8 max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold leading-tight animate-slide-up" style="animation-delay: 200ms;">
          <span class="block mb-2">Joan López</span>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 via-blue-600 to-blue-400">
            Desarrollador FullStack
          </span>
        </h1>
        
        <div class="flex flex-wrap items-center justify-center gap-3 animate-slide-up" style="animation-delay: 400ms;">
          <div class="px-4 py-2 bg-blue-900/30 backdrop-blur-sm rounded-full flex items-center border border-blue-500/20">
            <span class="w-2 h-2 rounded-full bg-green-500 mr-2"></span>
            <span class="text-green-400 font-medium">Software Developer <span class="text-gray-400">@AgriNews</span></span>
          </div>
          <div class="px-4 py-2 bg-indigo-900/30 backdrop-blur-sm rounded-full flex items-center border border-indigo-500/20">
            <span class="w-2 h-2 rounded-full bg-indigo-500 mr-2"></span>
            <span class="text-indigo-400 font-medium">Desarrollando <span class="text-white">nexTo AI</span></span>
          </div>
        </div>
        
        <p class="text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto leading-relaxed animate-slide-up" style="animation-delay: 600ms;">
          Desarrollador con experiencia en .NET, IA y backend, <span class="text-primary">apasionado</span> por crear soluciones digitales innovadoras y eficientes.
        </p>
        
        <!-- Elemento decorativo central -->
        <div class="relative h-0.5 w-40 mx-auto my-8 overflow-hidden rounded-full bg-gray-800 animate-slide-up" style="animation-delay: 700ms;">
          <div class="absolute top-0 left-0 h-full w-full bg-gradient-to-r from-blue-500 to-blue-700 animate-pulse-slow"></div>
        </div>
        
        <div class="flex flex-wrap gap-5 pt-4 justify-center animate-slide-up" style="animation-delay: 900ms;">
          <a href="#projects" class="btn btn-primary flex items-center group">
            <span>Ver proyectos</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="#contact" class="btn btn-outline flex items-center group relative overflow-hidden">
            <span class="relative z-10">Contacto</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 relative z-10" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
            <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/20 transform scale-x-0 group-hover:scale-x-100 origin-left transition-transform duration-300"></div>
          </a>
        </div>
        
        <div class="flex items-center gap-4 pt-8 justify-center animate-slide-up" style="animation-delay: 1000ms;">
          <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-all hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
          <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-all hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
          </a>
          <a href="mailto:contacto@ejemplo.com" class="text-gray-400 hover:text-white transition-all hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 24 24" fill="currentColor"><path d="M12 12.713l-11.985-9.713h23.97l-11.985 9.713zm0 2.574l-12-9.725v15.438h24v-15.438l-12 9.725z"/></svg>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator con animación mejorada -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" class="flex flex-col items-center text-gray-400 hover:text-primary transition-colors group">
      <span class="text-sm mb-2 group-hover:text-primary transition-all">Scroll</span>
      <div class="w-8 h-12 border-2 border-gray-400 rounded-full flex justify-center pt-1 group-hover:border-primary transition-colors">
        <div class="w-1.5 h-3 bg-gray-400 rounded-full animate-scroll-down group-hover:bg-primary transition-colors"></div>
      </div>
    </a>
  </div>
</section>

<style>
  @keyframes scroll-down {
    0% { transform: translateY(0); opacity: 1; }
    75% { transform: translateY(0.5rem); opacity: 0; }
    80% { transform: translateY(0); opacity: 0; }
    100% { opacity: 1; }
  }
  
  .animate-scroll-down {
    animation: scroll-down 2s ease-in-out infinite;
  }
</style> 