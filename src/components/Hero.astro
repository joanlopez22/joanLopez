---
import { Image } from 'astro:assets';
---

<section id="home" class="relative min-h-screen flex items-center justify-center pt-24 pb-16 overflow-hidden">
  <!-- Background elements -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/4 left-1/3 w-64 h-64 rounded-full bg-primary/5 filter blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/3 w-96 h-96 rounded-full bg-blue-700/10 filter blur-3xl"></div>
  </div>
  
  <div class="absolute top-40 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-blue-500/20 to-transparent"></div>
  <div class="absolute bottom-40 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-blue-500/20 to-transparent"></div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 md:px-8 z-10">
    <div class="flex flex-col items-center justify-center text-center">
      <div class="space-y-8 max-w-4xl mx-auto">
        <!-- Badge -->
        <div class="inline-flex items-center px-3 py-1.5 rounded-full bg-primary/10 border border-primary/20 mb-4 animate-fade-in">
          <span class="w-2 h-2 rounded-full bg-primary animate-pulse mr-2"></span>
          <span class="text-sm text-primary font-medium">Disponible para nuevos proyectos</span>
        </div>
        
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold leading-tight animate-slide-up" style="animation-delay: 200ms;">
          <span class="block mb-2">Joan LÃ³pez</span>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-blue-700 via-blue-600">
            Desarrollador FullStack
          </span>
        </h1>
        
        <div class="flex flex-wrap items-center justify-center gap-3 animate-slide-up" style="animation-delay: 400ms;">
          <div class="px-4 py-2 bg-blue-900/30 backdrop-blur-sm rounded-full flex items-center">
            <span class="w-2 h-2 rounded-full bg-green-500 mr-2"></span>
            <span class="text-green-400 font-medium">Software Developer <span class="text-gray-400">@AgriNews</span></span>
          </div>
          <div class="px-4 py-2 bg-indigo-900/30 backdrop-blur-sm rounded-full flex items-center">
            <span class="w-2 h-2 rounded-full bg-indigo-500 mr-2"></span>
            <span class="text-indigo-400 font-medium">Desarrollando <span class="text-white">nexTo AI</span></span>
          </div>
        </div>
        
        <p class="text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto leading-relaxed animate-slide-up" style="animation-delay: 600ms;">
          Desarrollador con experiencia en .NET, IA y backend, apasionado por crear soluciones digitales innovadoras y eficientes.
        </p>
        
        <!-- Elemento decorativo central -->
        <div class="relative h-0.5 w-40 mx-auto my-8 overflow-hidden rounded-full bg-gray-800 animate-slide-up" style="animation-delay: 700ms;">
          <div class="absolute top-0 left-0 h-full w-full bg-gradient-to-r from-blue-500 to-blue-700 animate-pulse-slow"></div>
        </div>
        
        <div class="flex flex-wrap gap-5 pt-4 justify-center animate-slide-up" style="animation-delay: 800ms;">
          <a href="#projects" class="btn btn-primary flex items-center">
            Ver proyectos
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="#contact" class="btn btn-outline flex items-center">
            Contacto
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
          </a>
        </div>
        
        <div class="flex items-center gap-4 pt-8 justify-center animate-slide-up" style="animation-delay: 900ms;">
          <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-all hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
          <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-all hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
          </a>
          <a href="mailto:contacto@ejemplo.com" class="text-gray-400 hover:text-white transition-all hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 12.713l-11.985-9.713h23.97l-11.985 9.713zm0 2.574l-12-9.725v15.438h24v-15.438l-12 9.725z"/></svg>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Typing animation code snippet -->
  <div class="absolute bottom-28 left-1/2 transform -translate-x-1/2 bg-secondary/80 backdrop-blur-sm rounded-lg p-3 border border-gray-800 w-72 md:w-96 animate-slide-up opacity-75" style="animation-delay: 1000ms;">
    <div class="flex items-start">
      <div class="rounded-full w-3 h-3 bg-red-500 mr-1.5"></div>
      <div class="rounded-full w-3 h-3 bg-yellow-500 mr-1.5"></div>
      <div class="rounded-full w-3 h-3 bg-green-500 mr-1.5"></div>
      <div class="text-gray-400 text-xs ml-2 mt-0.5 font-mono">{"> "}const nextProject = await joan.develop(ideas);</div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" class="flex flex-col items-center text-gray-400 hover:text-primary transition-colors">
      <span class="text-sm mb-2">Scroll</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section> 