    <div class="flex flex-col items-center mb-16 animate-on-scroll">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 flex items-center gap-3">
        <span class="text-primary">Proyectos</span> Destacados
        <div class="relative w-10 h-10 hidden md:flex items-center justify-center animate-rotate-slow">
          <div class="absolute inset-0 border-2 border-dashed border-blue-500/30 rounded-full"></div>
          <div class="absolute inset-[30%] bg-blue-500/30 rounded-full"></div>
