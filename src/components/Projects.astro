<section id="projects" class="section py-24 relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-blue-600/5 rounded-full filter blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-1/4 h-1/4 bg-blue-600/5 rounded-full filter blur-3xl"></div>
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-1/2 h-1/2 bg-grid opacity-5"></div>
  
